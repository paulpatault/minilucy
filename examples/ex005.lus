node aux (lo, hi : int) returns (x: int);
let
  automaton
  | Await ->
      x = 0 -> pre x + 1;
      until (x >= hi) continue Run
  | Run ->
      x = 0 -> pre x - 1;
      until (x <= lo) continue Await
  end
tel

node main1 () returns (o: bool);
var x: int;
let
  x = aux (-5, 5);
  o = true;
tel
