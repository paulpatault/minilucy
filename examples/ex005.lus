node oscillateur (lo, hi : int) returns (x: int);
let
  automaton
  | Chaud ->
      x = 0 -> pre x + 1;
      until (x >= hi) continue Froid
  | Froid ->
      x = 0 -> pre x - 1;
      until (x <= lo) continue Chaud
  end
tel

node main1 () returns (o: bool);
var x: int;
let
  x = oscillateur (-5, 5);
  o = true;
tel
