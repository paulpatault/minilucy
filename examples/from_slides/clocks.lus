node cumulative_sum(x : int) returns (y : int);
let
  y = (0 -> pre y) + x;
tel;

node count_bananas(banana : bool) returns (n : int);
var count : int;
let
  count = cumulative_sum(1 when banana);
  n = current count;
tel;

node bad_count_bananas(banana : bool) returns (n : int);
