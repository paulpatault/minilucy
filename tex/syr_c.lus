type t = Even | Odd

node syracuse(i : int) returns (o : int);
var state : t; cond__4 : bool; cond__3 : bool;
let
  cond__4 = o mod 2 = 0;
  cond__3 = o mod 2 = 1;
  state = Even ->
           pre (merge state
                 (Even ->
                   if cond__3 then Odd else Even)
                 (Odd ->
                   if cond__4 then Even else Odd));
  o = merge state
        (Even -> i -> pre o / 2)
        (Odd  -> i -> pre o * 3 + 1);
